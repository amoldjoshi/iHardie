<h1>Listing inquiries</h1>

<table>
  <tr>
    <th>Inquiry</th>
    <th>User</th>
    <th>Actiontaken</th>
    <th>Question</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @inquiries.each do |inquiry| %>
  <tr>
    <td><%= inquiry.inquiry %></td>
    <td><%= inquiry.user %></td>
    <td><%= inquiry.actiontaken %></td>
    <td><%= inquiry.question %></td>
    <td><%= link_to 'Show', inquiry %></td>
    <td><%= link_to 'Edit', edit_inquiry_path(inquiry) %></td>
    <td><%= link_to 'Destroy', inquiry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

