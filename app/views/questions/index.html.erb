	<div class = "span-24 last box">
       		<%=render 'layouts/menu' %>
	</div><!--End span-24 box.-->
	
	<div class = "span-24 last box">
	<%= form_for @search do |f|%>
		<p>
			<%= f.label :question_contains %>
			<%= f.text_field :question_contains %>
		<p class = "button"><%=f.submit "Search"%>
		</p>
		<p>
			<%= sort_link @search, :priority%>|
			<%= sort_link @search, :question%>
		</p>
	<%end%>
	
	
	<div class ="span-20 last">
		<script>
		  (function() {
		    var cx = '010825301222972986960:qidy2y__65e';
		    var gcse = document.createElement('script');
		    gcse.type = 'text/javascript';
