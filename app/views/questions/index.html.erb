<%- model_class = Question -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>




<div class="ui-widget">
  <label for="tags">Tags: </label>
  <input id="tags">
</div>


<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:question) %></th>
      <th><%= model_class.human_attribute_name(:answer) %></th>
      <th><%= model_class.human_attribute_name(:product) %></th>
      <th><%= model_class.human_attribute_name(:priority) %></th>
      <th><%= model_class.human_attribute_name(:user) %></th>
      <th><%= model_class.human_attribute_name(:questiontype) %></th>
      <th><%= model_class.human_attribute_name(:favorite) %></th>
      <th><%= model_class.human_attribute_name(:accellink) %></th>
      <th><%= model_class.human_attribute_name(:hardielink) %></th>
      <th><%= model_class.human_attribute_name(:youtubelink) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @questions.each do |question| %>
   
      <tr>
        <td><%= link_to question.id, question_path(question) %></td>
        <td><%= question.question %></td>
        <td><%= question.answer %></td>
        <td><%= question.product %></td>
        <td><%= question.priority %></td>
        <td><%= question.user %></td>
        <td><%= question.questiontype %></td>
        <td><%= question.favorite %></td>
        <td><%= question.accellink %></td>
        <td><%= question.hardielink %></td>
        <td><%= question.youtubelink %></td>
        <td><%=l question.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_question_path(question), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      question_path(question),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_question_path,
            :class => 'btn btn-primary' %>
