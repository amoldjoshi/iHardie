<%- model_class = Question -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:question) %>:</strong></dt>
  <dd><%= @question.question %></dd>
  <dt><strong><%= model_class.human_attribute_name(:answer) %>:</strong></dt>
  <dd><%= @question.answer %></dd>
  <dt><strong><%= model_class.human_attribute_name(:product) %>:</strong></dt>
  <dd><%= @question.product %></dd>
  <dt><strong><%= model_class.human_attribute_name(:priority) %>:</strong></dt>
  <dd><%= @question.priority %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user) %>:</strong></dt>
  <dd><%= @question.user %></dd>
  <dt><strong><%= model_class.human_attribute_name(:questiontype) %>:</strong></dt>
  <dd><%= @question.questiontype %></dd>
  <dt><strong><%= model_class.human_attribute_name(:favorite) %>:</strong></dt>
  <dd><%= @question.favorite %></dd>
  <dt><strong><%= model_class.human_attribute_name(:accellink) %>:</strong></dt>
  <dd><%= @question.accellink %></dd>
  <dt><strong><%= model_class.human_attribute_name(:hardielink) %>:</strong></dt>
  <dd><%= @question.hardielink %></dd>
  <dt><strong><%= model_class.human_attribute_name(:youtubelink) %>:</strong></dt>
  <dd><%= @question.youtubelink %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              questions_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_question_path(@question), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              question_path(@question),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
