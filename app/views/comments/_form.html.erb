<%= form_for @comment, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :comment, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :comment, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :user, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :user, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :questionID, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :questionID, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :accepted, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :accepted, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :feedback, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :feedback, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                comments_path, :class => 'btn' %>
  </div>
<% end %>
